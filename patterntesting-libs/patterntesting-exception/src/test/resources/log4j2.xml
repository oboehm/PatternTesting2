<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%d{HH:mm:ss,SSS} %-5p %-10t %-40.40c{3} %m%n" />
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="patterntesting" level="info"/>
    <Logger name="patterntesting.exception.net.ConnectExceptionTest" level="debug"/>
    <Logger name="patterntesting.runtime.util.ExceptionThrower" level="debug"/>
    <Root level="info" additivity="false">
      <AppenderRef ref="console" />
    </Root>
  </Loggers>
</Configuration>
